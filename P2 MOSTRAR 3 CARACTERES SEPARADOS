#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main() {
  
  char c1, c2, c3;
  
  printf("Ingrese el primer caracter:\n");
  scanf(" %c",&c1);
  
  printf("Ingrese el segundo caracter:\n");
  scanf(" %c", &c2);
  
  printf("Ingrese el tercer caracter:\n");
  scanf(" %c", &c3);

  printf("%c-%c-%c",c1, c2 ,c3);


}
