#include <stdio.h>

int main() {
  int num;

  printf("Ingrese un numero: \n");
  scanf(" %d", &num);

  switch (num){

    case 1:
    printf("El numero corresponde al dia Lunes");
    break;
    case 2:
    printf("El numero corresponde al dia Martes");
    break;
    case 3:
    printf("El numero corresponde al dia Miercoles");
    break;
    case 4:
    printf("El numero corresponde al dia Jueves");
    break;
    case 5:
    printf("El numero corresponde al dia Viernes");
    break;
    case 6:
    printf("El numero corresponde al dia Sabado");
    break;
    case 7: 
    printf("El numero corresponde al dia Domingo ");
    break;

    default:
    printf("El numero ingresado no corresponde a ningun dia de la semana");
    break;
    
  }

}
