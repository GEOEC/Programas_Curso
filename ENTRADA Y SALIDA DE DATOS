#include <stdio.h>
#include <stdlib.h>

int main() {
  int numero = 6;
  int numero2 = 10;
 printf("El contenido de la variable ENTERO numero y numero2 es: %d y %d \n", numero, numero2);

  float num = 7.5;
  float num2 = 11.5;

  printf("El contenido de la primera variable y segunda variable FLOAT es: %.2f y %.2f \n",num, num2);

  double n1= 8.5;
  double n2= 11.8;

  printf("El contenido de la variable DOUBLE es: %.2lf y %.2lf \n", n1, n2);

  char caracter = 'd';

  printf("El contenido de la variable CHAR es: %c \n", caracter);

  int n;
  printf("Ingrese un numero entero: ");
  scanf("%d", &n);

  printf("El numero que ingreso es: %d \n", n);

  float f;
  printf("Ingrese un numero flotante : ");
  scanf("%f", &f);

  printf("El numero que ingreso es: %.2f \n", f);

}
